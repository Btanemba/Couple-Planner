{
    "version": 2,
    "buildCommand": "composer install --no-dev --optimize-autoloader && npm ci && npm run build",
    "functions": {
        "api/index.php": { "runtime": "vercel-php@0.7.1" }
    },
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/build/$1"
        },
        {
            "src": "/manifest.json",
            "dest": "/public/manifest.json"
        },
        {
            "src": "/icon-192.svg",
            "dest": "/public/icon-192.svg"
        },
        {
            "src": "/(css|js|img)/(.*)",
            "dest": "/public/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_KEY": "base64:A9GzLdOUDreT6Sd70eB8aY0ux/625r+eI1iVkkQZgeY=",
        "APP_DEBUG": "false",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie",
        "DB_CONNECTION": "sqlite",
        "DB_DATABASE": "/tmp/database.sqlite"
    }
}
